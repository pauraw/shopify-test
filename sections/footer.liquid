<footer class="footer">
  <div class="footer__container">
    <div class="footer__grid">
      {% comment %} Brand Column {% endcomment %}
      <div class="footer__column footer__column--brand">
        <a href="/" class="footer__logo">
          {%- if section.settings.logo != blank -%}
            <img
              src="{{ section.settings.logo | image_url: width: 200 }}"
              alt="{{ shop.name }}"
              class="footer__logo-image"
              width="120"
              height="auto"
              loading="lazy"
            >
          {%- else -%}
            <img
              src="{{ 'logo-neoric.png' | asset_url }}"
              alt="{{ shop.name }}"
              class="footer__logo-image"
              width="120"
              height="auto"
              loading="lazy"
            >
          {%- endif -%}
        </a>
        {%- if section.settings.description != blank -%}
          <p class="footer__description">{{ section.settings.description }}</p>
        {%- endif -%}
      </div>

      {% comment %} Link Columns {% endcomment %}
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'link_list' -%}
            <div class="footer__column" {{ block.shopify_attributes }}>
              <h4 class="footer__heading">{{ block.settings.heading }}</h4>
              <ul class="footer__links">
                {%- for link in block.settings.menu.links -%}
                  <li class="footer__link-item">
                    <a href="{{ link.url }}" class="footer__link">{{ link.title }}</a>
                  </li>
                {%- endfor -%}
              </ul>
            </div>
          {%- when 'contact' -%}
            <div class="footer__column" {{ block.shopify_attributes }}>
              <h4 class="footer__heading">{{ block.settings.heading }}</h4>
              <address class="footer__contact">
                {%- if block.settings.email != blank -%}
                  <a href="mailto:{{ block.settings.email }}" class="footer__contact-link">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                      <polyline points="22,6 12,13 2,6"></polyline>
                    </svg>
                    {{ block.settings.email }}
                  </a>
                {%- endif -%}
                {%- if block.settings.phone != blank -%}
                  <a href="tel:{{ block.settings.phone | remove: ' ' }}" class="footer__contact-link">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
                    </svg>
                    {{ block.settings.phone }}
                  </a>
                {%- endif -%}
              </address>
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>

    {% comment %} Footer Bottom {% endcomment %}
    <div class="footer__bottom">
      <div class="footer__copyright">
        &copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. Alle Rechte vorbehalten.
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: #f8f8f8;
    padding: 50px 20px 30px;
    margin-top: 40px;
  }

  .footer__container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .footer__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 30px;
    margin-bottom: 40px;
  }

  .footer__logo {
    display: inline-block;
    text-decoration: none;
    margin-bottom: 15px;
  }

  .footer__logo-text {
    font-family: 'Montserrat', sans-serif;
    font-size: 24px;
    font-weight: 700;
    color: #000;
    letter-spacing: 2px;
  }

  .footer__logo-image {
    max-height: 40px;
    width: auto;
  }

  .footer__description {
    font-family: 'Montserrat', sans-serif;
    font-size: 14px;
    color: #666;
    line-height: 1.6;
    margin: 0;
  }

  .footer__heading {
    font-family: 'Montserrat', sans-serif;
    font-size: 14px;
    font-weight: 600;
    color: #000;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin: 0 0 15px;
  }

  .footer__links {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .footer__link-item {
    margin-bottom: 10px;
  }

  .footer__link {
    font-family: 'Montserrat', sans-serif;
    font-size: 14px;
    color: #666;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .footer__link:hover {
    color: #1F47FF;
  }

  .footer__contact {
    font-style: normal;
  }

  .footer__contact-link {
    display: flex;
    align-items: center;
    gap: 10px;
    font-family: 'Montserrat', sans-serif;
    font-size: 14px;
    color: #666;
    text-decoration: none;
    margin-bottom: 10px;
    transition: color 0.2s ease;
  }

  .footer__contact-link:hover {
    color: #1F47FF;
  }

  .footer__bottom {
    display: flex;
    flex-direction: column;
    gap: 15px;
    padding-top: 20px;
    border-top: 1px solid #e5e5e5;
  }

  .footer__copyright {
    font-family: 'Montserrat', sans-serif;
    font-size: 13px;
    color: #999;
  }

  @media (min-width: 768px) {
    .footer {
      padding: 60px 40px 30px;
    }

    .footer__grid {
      grid-template-columns: 2fr 1fr 1fr 1fr;
      gap: 40px;
    }

    .footer__bottom {
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
    }
  }
</style>

