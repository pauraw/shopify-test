<section class="trust-icons">
  <div class="trust-icons__container">
    {%- for block in section.blocks -%}
      <div class="trust-icons__item" {{ block.shopify_attributes }}>
        <div class="trust-icons__icon">
          {%- case block.settings.icon -%}
            {%- when 'quality' -%}
              <svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
              </svg>
            {%- when 'silicone' -%}
              <svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <circle cx="12" cy="12" r="10"/>
                <path d="M8 14s1.5 2 4 2 4-2 4-2"/>
                <line x1="9" y1="9" x2="9.01" y2="9"/>
                <line x1="15" y1="9" x2="15.01" y2="9"/>
              </svg>
            {%- when 'shipping' -%}
              <svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <rect x="1" y="3" width="15" height="13"/>
                <polygon points="16 8 20 8 23 11 23 16 16 16 16 8"/>
                <circle cx="5.5" cy="18.5" r="2.5"/>
                <circle cx="18.5" cy="18.5" r="2.5"/>
              </svg>
            {%- when 'secure' -%}
              <svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <rect x="3" y="11" width="18" height="11" rx="2" ry="2"/>
                <path d="M7 11V7a5 5 0 0 1 10 0v4"/>
              </svg>
            {%- when 'return' -%}
              <svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <polyline points="1 4 1 10 7 10"/>
                <path d="M3.51 15a9 9 0 1 0 2.13-9.36L1 10"/>
              </svg>
            {%- when 'check' -%}
              <svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                <polyline points="22 4 12 14.01 9 11.01"/>
              </svg>
            {%- else -%}
              <svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <circle cx="12" cy="12" r="10"/>
                <polyline points="12 6 12 12 16 14"/>
              </svg>
          {%- endcase -%}
        </div>
        <div class="trust-icons__content">
          <h3 class="trust-icons__title">{{ block.settings.title }}</h3>
          {%- if block.settings.description != blank -%}
            <p class="trust-icons__description">{{ block.settings.description }}</p>
          {%- endif -%}
        </div>
      </div>
    {%- endfor -%}
  </div>
</section>

<style>
  .trust-icons {
    padding: 40px 15px;
    background-color: {{ section.settings.background_color }};
  }

  .trust-icons__container {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr;
    gap: 25px;
  }

  .trust-icons__item {
    display: flex;
    align-items: flex-start;
    gap: 15px;
    padding: 20px;
    background: #fff;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  }

  .trust-icons__icon {
    flex-shrink: 0;
    width: 50px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: {{ section.settings.icon_background }};
    border-radius: 50%;
    color: {{ section.settings.icon_color }};
  }

  .trust-icons__icon svg {
    width: 24px;
    height: 24px;
  }

  .trust-icons__content {
    flex: 1;
  }

  .trust-icons__title {
    font-family: 'Montserrat', sans-serif;
    font-size: 16px;
    font-weight: 600;
    color: #000;
    margin: 0 0 5px;
  }

  .trust-icons__description {
    font-family: 'Montserrat', sans-serif;
    font-size: 14px;
    font-weight: 400;
    color: #666;
    margin: 0;
    line-height: 1.5;
  }

  @media (min-width: 768px) {
    .trust-icons {
      padding: 60px 20px;
    }

    .trust-icons__container {
      grid-template-columns: repeat(3, 1fr);
      gap: 30px;
    }

    .trust-icons__item {
      flex-direction: column;
      align-items: center;
      text-align: center;
      padding: 30px;
    }

    .trust-icons__icon {
      width: 70px;
      height: 70px;
      margin-bottom: 10px;
    }

    .trust-icons__icon svg {
      width: 32px;
      height: 32px;
    }
  }
</style>

{% schema %}
{
  "name": "Trust Icons",
  "tag": "section",
  "class": "section-trust-icons",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Hintergrundfarbe",
      "default": "#f8f8f8"
    },
    {
      "type": "color",
      "id": "icon_background",
      "label": "Icon Hintergrund",
      "default": "#e8f0fe"
    },
    {
      "type": "color",
      "id": "icon_color",
      "label": "Icon Farbe",
      "default": "#1F47FF"
    }
  ],
  "blocks": [
    {
      "type": "trust_item",
      "name": "Trust Item",
      "settings": [
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "options": [
            { "value": "quality", "label": "Qualität (Stern)" },
            { "value": "silicone", "label": "Komfort (Smile)" },
            { "value": "shipping", "label": "Versand (LKW)" },
            { "value": "secure", "label": "Sicher (Schloss)" },
            { "value": "return", "label": "Rückgabe (Pfeil)" },
            { "value": "check", "label": "Geprüft (Haken)" }
          ],
          "default": "quality"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Titel",
          "default": "100% Qualität"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Beschreibung",
          "default": "Hochwertige Materialien für beste Qualität"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Trust Icons",
      "blocks": [
        {
          "type": "trust_item",
          "settings": {
            "icon": "quality",
            "title": "100% Qualität",
            "description": "Hochwertige Materialien für beste Qualität"
          }
        },
        {
          "type": "trust_item",
          "settings": {
            "icon": "silicone",
            "title": "Weiches Silikon",
            "description": "Angenehm zu tragen, den ganzen Tag"
          }
        },
        {
          "type": "trust_item",
          "settings": {
            "icon": "shipping",
            "title": "Schneller Versand",
            "description": "In 2-3 Werktagen bei dir"
          }
        }
      ]
    }
  ]
}
{% endschema %}
